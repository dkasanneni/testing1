                   tenant.status === 'suspended' ? 'Suspended' :
                   tenant.status === 'trial' ? 'Trial' : 'Inactive',
    environmentDisplay: tenant.environment === 'production' ? 'Production' :
                        tenant.environment === 'test' ? 'Test' :
                        tenant.environment === 'trial' ? 'Trial' : 'Onboarding',
