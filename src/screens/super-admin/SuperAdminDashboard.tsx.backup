                      tenant.baa_status === 'expiring_soon' ? 'BAA Expiring Soon' : 'BAA Not Signed',
  }));

  const filteredTenants = transformedTenants.filter((tenant) => {
    const matchesSearch = 
      tenant.name?.toLowerCase().includes(searchQuery.toLowerCase()) ||
      tenant.subdomain?.toLowerCase().includes(searchQuery.toLowerCase()) ||
      tenant.contact_email?.toLowerCase().includes(searchQuery.toLowerCase()) ||
      tenant.ein?.toLowerCase().includes(searchQuery.toLowerCase());
    
    const matchesStatus = statusFilter === 'all' || tenant.status === statusFilter;
    const matchesEnvironment = environmentFilter === 'all' || tenant.environment === environmentFilter;
    
    return matchesSearch && matchesStatus && matchesEnvironment;
  });

  const handleSignOut = () => {
    logout();
    navigation.navigate('Landing');
  };

  const handleTabChange = (tab: TabType) => {
    setActiveTab(tab);
    setIsDrawerOpen(false);
  };

  const handleFormChange = (field: string, value: string | boolean | number) => {
    setFormData((prev) => ({ ...prev, [field]: value }));
  };

  const handleAddAgency = async () => {
    if (!formData.agencyName || !formData.subdomain || !formData.contactEmail) {
      toast.error('Please fill in all required fields');
      return;
    }
    
    try {
      await createTenant({
        name: formData.agencyName,
        subdomain: formData.subdomain,
        ein: formData.ein,
        contact_email: formData.contactEmail,
        contact_phone: formData.contactPhone,
        billing_plan: formData.billingPlan,
        seats_total: formData.seats,
        environment: formData.environment,
        region: formData.region,
      });
      
      toast.success('Agency created successfully!');
      setIsAddAgencyModalOpen(false);
      setFormData({
        agencyName: '',
        subdomain: '',
        domainSuffix: '.app',
        ein: '',
        contactEmail: '',
        contactPhone: '',
        billingPlan: 'starter',
        seats: 10,
        environment: 'onboarding',
        region: 'us-east',
        testMode: false,
      });
      loadData(); // Reload data
    } catch (error) {
      toast.error(error instanceof Error ? error.message : 'Failed to create agency');
    }
  };

  const handleImpersonate = async () => {
    if (!impersonateReason.trim() || !impersonateTenantData) {
      toast.error('Please provide a reason for impersonation');
      return;
    }
    
    try {
      await impersonateTenant(impersonateTenantData.id, impersonateReason);
      toast.success(`Impersonating ${impersonateTenantData.name} for support`);
      setIsImpersonateOpen(false);
      setImpersonateReason('');
      loadData(); // Reload to update audit logs
    } catch (error) {
      toast.error('Failed to start impersonation');
    }
  };

  const handleSuspend = async () => {
    if (!suspendReason.trim() || !suspendTenantData) {
      toast.error('Please provide a reason for suspension');
      return;
    }
    
    try {
      await suspendTenant(suspendTenantData.id, suspendReason);
      toast.success(`${suspendTenantData.name} has been suspended`);
      setIsSuspendDialogOpen(false);
      setSuspendReason('');
      loadData(); // Reload data
    } catch (error) {
      toast.error('Failed to suspend agency');
    }
  };

  const handleUnsuspend = async (tenantId: string) => {
    try {
      await unsuspendTenant(tenantId);
      toast.success('Agency has been reactivated');
      loadData();
    } catch (error) {
      toast.error('Failed to reactivate agency');
    }
  };

  const handleUploadBAA = async () => {
    if (!baaFile || !baaSignedBy || !baaExpiresAt || !selectedTenant) {
      toast.error('Please fill in all BAA fields');
      return;
    }

    try {
      await uploadBAADocument(selectedTenant.id, baaFile, baaSignedBy, baaExpiresAt);
      toast.success('BAA document uploaded successfully');
      setIsBAADialogOpen(false);
      setBAAFile(null);
      setBAASignedBy('');
      setBAAExpiresAt('');
      loadData();
    } catch (error) {
      toast.error('Failed to upload BAA document');
    }
  };

  const handleViewBAA = async (tenantId: string) => {
    try {
      const docs = await fetchBAADocuments(tenantId);
      setBAADocuments(docs);
      const tenant = tenants.find(t => t.id === tenantId);
      setSelectedTenant(tenant);
      setIsBAADialogOpen(true);
    } catch (error) {
      toast.error('Failed to load BAA documents');
    }
  };

  const handleUpdateFeatureFlags = async (tenantId: string, flags: string[]) => {
    try {
      await updateFeatureFlags(tenantId, flags);
      toast.success('Feature flags updated');
      loadData();
    } catch (error) {
      toast.error('Failed to update feature flags');
    }
  };

  const handleExportCSV = () => {
    const csv = [
      ['Name', 'Subdomain', 'Status', 'Environment', 'BAA Status', 'Users', 'Patients', 'Charts'],
      ...transformedTenants.map(t => [
        t.name,
        t.subdomain,
        t.statusDisplay,
        t.environmentDisplay,
        t.baaStatusDisplay,
        t.user_count || 0,
        t.patient_count || 0,
        t.chart_count || 0,
      ])
    ].map(row => row.join(',')).join('\n');
    
    const blob = new Blob([csv], { type: 'text/csv' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `agencies-${new Date().toISOString().split('T')[0]}.csv`;
    a.click();
